<h1>Eat Da Burger!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li>
          {{burger_name}}
          	<button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">Eat Da Burger</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      <li>
          {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" burger_name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>